<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="potronet" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.example.PotroNet.domain.Chat</class>
    <class>com.example.PotroNet.domain.ChatUsuario</class>
    <class>com.example.PotroNet.domain.Hobbie</class>
    <class>com.example.PotroNet.domain.HobbieUsuario</class>
    <class>com.example.PotroNet.domain.Interes</class>
    <class>com.example.PotroNet.domain.InteresUsuario</class>
    <class>com.example.PotroNet.domain.Like</class>
    <class>com.example.PotroNet.domain.Match</class>
    <class>com.example.PotroNet.domain.Math</class>
    <class>com.example.PotroNet.domain.Usuario</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/potronet"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.password" value="1234"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
