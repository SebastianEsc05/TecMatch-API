<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.1" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="TecMatchPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.example.TecMatch.models.Chat</class>
    <class>com.example.TecMatch.models.ChatUsuario</class>
    <class>com.example.TecMatch.models.Hobbie</class>
    <class>com.example.TecMatch.models.HobbieUsuario</class>
    <class>com.example.TecMatch.models.Interes</class>
    <class>com.example.TecMatch.models.InteresUsuario</class>
    <class>com.example.TecMatch.models.Like</class>
    <class>com.example.TecMatch.models.Match</class>
    <class>com.example.TecMatch.models.Mensaje</class>
    <class>com.example.TecMatch.models.Usuario</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/TecMatch"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.password" value="1234"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
